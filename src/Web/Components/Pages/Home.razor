@page "/"
@inherits LayoutComponentBase




<!-- Hero Section -->
<section class="hero">
    <div class="floating-elements">
        <div class="floating-element float-1"></div>
        <div class="floating-element float-2"></div>
        <div class="floating-element float-3"></div>
    </div>

    <div class="container hero-container">
        <div class="hero-content">
            <h1 class="hero-title">Kendi <span>online mağazanı</span> kur, satış yapmaya başla</h1>
            <p class="hero-subtitle">Binlerce ürünle dünyanın dört bir yanındaki alıcılara ulaşın veya ihtiyacınız olan her şeyi bulun.</p>
            <div class="hero-actions">
                <a href="#" class="btn btn-primary btn-large">Ücretsiz Deneyin</a>
                <a href="#" class="btn btn-secondary btn-large">Daha Fazla Bilgi</a>
            </div>
            <div class="hero-stats">
                <div class="stat-item">
                    <span class="stat-number">10.000+</span>
                    <span class="stat-label">Aktif Mağaza</span>
                </div>
                <div class="stat-item">
                    <span class="stat-number">500K+</span>
                    <span class="stat-label">Ürün Çeşidi</span>
                </div>
                <div class="stat-item">
                    <span class="stat-number">2M+</span>
                    <span class="stat-label">Mutlu Müşteri</span>
                </div>
            </div>
        </div>
        <div class="hero-image">
            <img src="https://images.unsplash.com/photo-1556742049-0cfed4f6a45d?ixlib=rb-1.2.1&auto=format&fit=crop&w=600&q=60" alt="Online Mağaza">
        </div>
    </div>
</section>

<!-- Features -->
<section class="features">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title">Neden PazarYeri?</h2>
            <p class="section-subtitle">Hem satıcılar hem de alıcılar için tasarlanmış modern çoklu pazar deneyimi</p>
        </div>

        <div class="features-grid">
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-store"></i>
                </div>
                <h3 class="feature-title">Kolay Mağaza Kurulumu</h3>
                <p class="feature-description">Birkaç dakika içinde mağazanızı açın ve ürünlerinizi satmaya başlayın.</p>
            </div>

            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-globe"></i>
                </div>
                <h3 class="feature-title">Geniş Müşteri Kitlesi</h3>
                <p class="feature-description">Milyonlarca potansiyel alıcıya tek platformdan ulaşın.</p>
            </div>

            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-shield-alt"></i>
                </div>
                <h3 class="feature-title">Güvenli Ödeme</h3>
                <p class="feature-description">Güvenli ödeme sistemi ile alışverişin keyfini çıkarın.</p>
            </div>
        </div>
    </div>
</section>

